{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        // iOS Simulator
        {
            "name": "Flutter iOS Simulator",
            "request": "launch",
            "type": "dart",
            "deviceId": "flutter",
            "flutterMode": "debug",
            "cwd": "${workspaceFolder}",
            "program": "lib/main.dart",
            "args": [
                "--flavor",
                "dev",
                "--target",
                "lib/main.dart"
            ],
            "env": {}
        },

        // Android emulator
        {
            "name": "Flutter Android Emulator",
            "request": "launch",
            "type": "dart",
            "deviceId": "emulator-5554",
            "flutterMode": "debug",
            "cwd": "${workspaceFolder}",
            "program": "lib/main.dart",
            "args": [
                "--flavor",
                "dev",
                "--target",
                "lib/main.dart"
            ],
            "env": {}
        },

        // Chrome web
        {
            "name": "Flutter Web Chrome",
            "request": "launch",
            "type": "dart",
            "deviceId": "flutter",
            "flutterMode": "debug",
            "cwd": "${workspaceFolder}",
            "program": "lib/main.dart",
            "args": [
                "--flavor",
                "dev",
                "--target",
                "lib/main.dart",
                "-d",
                "chrome"
            ],
            "env": {}
        }
    ]
}
